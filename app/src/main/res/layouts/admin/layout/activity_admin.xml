<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom"/>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/white_rectangle_grey_top_border"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="center_vertical|end"
            android:text ="@string/activity_admin_login_text1"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:layout_marginStart="@dimen/margin_extra_narrow"
            tools:text ="@string/activity_admin_login_text2"
            android:textStyle="bold"
            android:textColor="@color/settings_blue"
            android:textSize="12sp"/>

    </LinearLayout>

</RelativeLayout>