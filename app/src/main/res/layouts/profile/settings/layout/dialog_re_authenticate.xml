<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_narrow"
        android:background="@drawable/white_rectangle_rounded_corners"
        android:padding="@dimen/margin_narrow">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Re-Authentication"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/transparent_rectangle_grey_bottom_border"/>

        <TextView
            android:id="@+id/reminder"
            android:layout_marginTop="@dimen/margin_extra_narrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/re_authentication_reminder" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rectangle_grey_bottom_border"
            android:hint="Password"
            android:padding="@dimen/margin_narrow"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/margin_extra_narrow">

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Cancel"/>

            <Button
                android:id="@+id/confirm_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Confirm"
                android:gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/blue_rectangle_rounded_corners"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>